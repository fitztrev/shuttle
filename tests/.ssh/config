#
# Grouped menu items (by Shuttle comment syntax)
#
Host dev01.example.net
	# shuttle.name = Work/dev01.example.net (my dev box)
	Hostname dev01.example.net

Host test01.example.net
	# shuttle.name = Work/Production/test01.example.net (webserver)
	Hostname test01.example.net

Host test02.example.net
	# shuttle.name = Work/Production/test02.example.net (database)
